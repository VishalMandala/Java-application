<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>projectTwo</display-name>
  <welcome-file-list>
    <welcome-file>/html/login.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.as.login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>signUp</servlet-name>
    <servlet-class>com.as.signUp</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>forgotPassword</servlet-name>
    <servlet-class>com.as.forgotPassword</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>as</servlet-name>
    <servlet-class>com.as</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/html/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>signUp</servlet-name>
    <url-pattern>/html/signUp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>forgotPassword</servlet-name>
    <url-pattern>/html/forgotPassword</url-pattern>
  </servlet-mapping>
</web-app>